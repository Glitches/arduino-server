{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "parser": "typescript-eslint-parser",
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "plugins": ["prettier", "typescript", "tslint"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "prettier/prettier": "error",
    "tslint/config": [
      "warn",
      {
        lintFile: " /* path to tslint.json of your project */",
        rules: {
          /* tslint rules (will be used if `lintFile` is not specified) */
        },
        rulesDirectory: [
          /* array of paths to directories with rules, e.g. 'node_modules/tslint/lib/rules' (will be used if `lintFile` is not specified) */
        ],
        configFile: " /* path to tsconfig.json of your project */",
        compilerOptions: {
          /* ability to override TypeScript compilers options defined in tsconfig.json */
        }
      }
    ]
  }
}
